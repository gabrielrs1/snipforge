{
  "name": "snipforge",
  "displayName": "SnipForge",
  "description": "Snippets for ObjectScript development.",
  "publisher": "GabrielSantos",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gabrielrs1/snipforge"
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ext.forgeTest",
        "title": "Forge Test"
      },
      {
        "command": "ext.pasteForgeTest",
        "title": "Paste Forge Test"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ext.forgeTest",
          "when": "editorHasSelection",
          "group": "navigation"
        },
        {
          "command": "ext.pasteForgeTest",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    },
    "snippets": [
      {
        "language": "objectscript",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "objectscript-class",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "objectscript-csp",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "objectscript-int",
        "path": "./snippets/snippets.json"
      },
      {
        "language": "objectscript-macros",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
